{% extends 'base.html.twig' %}

{# {% block title %}Hello ContactController!{% endblock %} #}

{% block body %}
	<div class="max-w-7xl mx-auto py-20">
		<section class="bg-white dark:bg-gray-900">
			<div class="py-8 lg:py-16 px-4 mx-auto max-w-screen-md">
				<h1 class="mb-4 text-4xl tracking-tight font-extrabold text-center text-gray-900 dark:text-white">{{ contactPage.mainTitle }}</h1>
				<h2 class="font-light text-center text-gray-500 dark:text-gray-400 sm:text-xl">{{ contactPage.content|replace({'<div>': '', '</div>': '',})|raw }}</h2>

				{{ form_start(form, { 'attr': { 'class': 'w-full bg-white text-sm shadow-md rounded px-8 pt-6 pb-8 mb-4' } }) }}
					<div>
						{{ form_row(form.nom) }}
						{{ form_errors(form.nom) }}
					</div>
					<div>
						{{ form_row(form.email) }}
						{{ form_errors(form.email) }}
					</div>
					<div>
						{{ form_row(form.sujet) }}
						{{ form_errors(form.sujet) }}
					</div>
					<div class="sm:col-span-2 h-full">
						{{ form_row(form.message) }}
						{{ form_errors(form.message) }}
					</div>
					<div>
						{{ form_row(form.captcha) }}
						{{ form_errors(form.captcha) }}
					</div>
					{{ form_row(form.submit) }}
				{{ form_end(form) }}

				{% for message in app.flashes('error') %}
					<div id="error" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mt-6 text-center">
						{{ message }}
					</div>
				{% endfor %}
				{% for message in app.flashes('success') %}
					<div id="success" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mt-6 text-center">
						{{ message }}
					</div>
				{% endfor %}
			</div>
		</section>
	</div>
{% endblock %}
