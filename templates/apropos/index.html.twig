{% block body %}
<div class="max-w-7xl mx-auto pt-32 pb-20 md:pt-40 md:pb-20 relative flex justify-center">
    <div class="flex justify-between items-center flex-wrap gap-8">
        <div class="w-full md:w-[48%]">
            <img src="{{ asset('uploads/img/pages/' ~ aproposPage.image) }}" alt="{{ aproposPage.mainTitle }}" class="w-full h-full object-cover shadow rounded">
        </div>
        <div class="w-full md:w-[48%]">
            <h1 class="font-bold text-4xl text-center mb-8">{{ aproposPage.mainTitle }}</h1>
            <h2 class="text-xl text-center mb-8 text-orange-600 font-semibold">{{ aproposPage.subtitle }}</h2>
            <div class="text-base mb-8">{{ aproposPage.content|raw }}</div>
