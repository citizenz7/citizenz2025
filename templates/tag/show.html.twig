{% extends 'base.html.twig' %}

{% block title %}Tag{% endblock %}

{% block body %}
        <div class="max-w-7xl mx-auto py-32">
            <h1 class="mb-12 text-4xl tracking-tight font-extrabold text-center text-gray-900 dark:text-white">{{ tag.title }}</h1>
            {% for article in tag.articles %}
                <div class="w-full mt-5 pb-2 border-b border-gray-200">
                    <h2 class="text-xl text-gray-600 font-semibold">
                        <a href="{{ path('app_article', {'slug': article.slug}) }}">{{ article.title }} <i class="fa-solid fa-square-up-right text-orange-600"></i></a>
                    </h2>
                    <p class="text-gray-400 text-xs">{{ article.createdAt|ago }}</p>
                </div>
            {% endfor %}
        </div>
{% endblock %}
