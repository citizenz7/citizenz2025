{% extends 'base.html.twig' %}

{# {% block title %}Category index{% endblock %} #}

{% block body %}
    <div class="max-w-7xl mx-auto pt-28 pb-20 relative">
        <h1 class="text-2xl md:text-3xl font-bold text-sky-800 mt-4 text-center">Toutes les catégories d'article</h1>
        <div class="max-w-3xl mx-auto mt-16 flex flex-col gap-8">
            <div class="flex justify-between items-center">
                <h2 class="font-bold text-base md:text-xl bg-slate-100 px-4 py-2 w-full">Catégories</h2>
                <span class="font-bold text-base md:text-lg text-gray-600 bg-slate-100 px-4 py-2 w-full text-end">nb d'articles</span>
            </div>
            {% for cat in categories %}
                <div class="flex justify-between items-center px-4">
                    <a href="{{ path('app_category_show', {'slug': cat.slug}) }}" class="font-semibold text-base md:text-xl hover:underline" style="color: {{ cat.color}};">{{ cat.title }} <i class="fa-solid fa-square-up-right"></i></a>
                    {# Afficher le nb d'articles dans la catégorie #}
                    <span class="text-base md:text-xl text-gray-600">{{ cat.articles|length }}</span>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
